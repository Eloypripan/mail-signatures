<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="author" content="IvÃ¡n Salido Cobo" />
    <meta name="github" content="https://github.com/ComicIvans/mail-signatures" />
    <meta name="last-modified" content="{{ date }}" />
    <meta name="icons-source" content="https://tabler-icons.io/" />
    <title></title>
  </head>
  <body>
    <div style="font-family: '{{ main_font }}', sans-serif; font-size: 10pt">
      <div style="width: {% if max_width is defined %}{{ max_width }}px{% else %}fit-content{% endif %}">
        <img alt="ðŸ‘¤" moz-do-not-send="true" style="min-width: 120px; min-height: 65px; max-width: {% if max_width is defined %}{{ max_width }}px{% else %}fit-content{% endif %}; display: flex; align-items: center; justify-content: center; color: white; overflow: hidden" width="120" src="{{ name_image }}" />
        <div style="display: flex; flex-direction: row; margin-top: 10px; margin-bottom: 20px">
          <div style="margin-right: 10px; width: 4px; min-height: max-content; background-color: {{ color }}; border-radius: 10px"></div>
          <div>
            <p style="margin: auto; margin-left: 0; font-family: '{{ name_font }}', sans-serif; font-size: 16pt">
              <b>{{ name }}</b>
            </p>
            <p style="margin: 0; font-size: 12pt">
              <b>{{ position }}</b>
            </p>
            <p style="margin: 0">{{ organization }}</p>
            {%- if phone is defined %}
            <br />
            <p style="margin: 0">
              {%- if phone_country_code is defined %}
              <a style="color: inherit; text-decoration: none" href="tel:{{ phone_country_code }}{{ phone|replace(' ', '') }}">{{ phone }}</a>
              {%- else %}
              {{ phone }}
              {%- endif %}
              {%- if internal_phone is defined %}
              &nbsp;({{ internal_phone }})
              {%- endif %}
              <b>&nbsp;&nbsp;Â·&nbsp;&nbsp;</b><a style="color: inherit; text-decoration: none" href="mailto:{{ mail }}">{{ mail }}</a>
            </p>
            {%- elif opt_mail is defined %}
            <br />
            <a style="color: inherit; text-decoration: none" href="mailto:{{ mail }}">{{ mail }}</a><b>&nbsp;&nbsp;Â·&nbsp;&nbsp;</b><a style="color: inherit; text-decoration: none" href="mailto:{{ opt_mail }}">{{ opt_mail }}</a>
            <br />
            {%- else %}
            <br />
            <a style="color: inherit; text-decoration: none" href="mailto:{{ mail }}">{{ mail }}</a>
            <br />
            {%- endif %}
            {%- if organization_extra is defined %}
            <br />
            <p style="margin: 0">
              <i>{{ organization_extra }}</i>
            </p>
            {%- endif %}
          </div>
        </div>
        {%- if links is defined %}
        <div style="display: flex; align-items: center; margin-bottom: 20px">
          {%- for link in links %}
          <a href="{{ link.url }}" style="border-radius: 50%; color: inherit; text-decoration: none; margin-right: 5px; min-width: 35px; min-height: 35px; display: flex; align-items: center; justify-content: center; background-color: white; font-weight: bold; font-size: 14pt">
            <img alt="{{ link.alt }}" moz-do-not-send="true" style="font-size: 16pt; max-width: 35px; max-height: 35px; display: flex; align-items: center; justify-content: center" height="35" width="35" src="{{ link.image }}" />
          </a>
          {%- endfor %}
        </div>
        {%- endif %}
      </div>
      {%- if footer_address is defined or footer_text is defined %}
      <footer style="font-size: 8pt">
        {%- if footer_address is defined %}
        <b style="color: {{ color }}">{{ footer_address }}</b>
        {%- endif %}
        {%- if footer_text is defined %}
        <p style="color: dimgray">{{ footer_text }}</p>
        {%- endif %}
      </footer>
      {%- endif %}
    </div>
  </body>
</html>
